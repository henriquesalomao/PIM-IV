{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "rules": {
    "quotes": [2, "double"],
    "no-unused-vars": "off",
    "linebreak-style": "off",
    "semi": [2, "always"],
    "no-console": "off",
    "no-await-in-loop": "off",
    "comma-dangle": ["error", "never"],
    "max-len": "off",
    "no-underscore-dangle": "off",
    "no-nested-ternary": "off",
    "indent": "off",
    "import/named": "off",
    "no-return-await": "off",
    "camelcase": "off",
    "import/extensions": "off",
    "import/no-dynamic-require": "off",
    "global-require": "off",
    "class-methods-use-this": "off",
    "no-useless-catch": "off"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".ts"]
      }
    }
  }
}
